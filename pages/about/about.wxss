@import "../../wxParse/wxParse.wxss";

.wrapper {
	padding: 5rpx;
}
.excerpt {
	color:#626262; 
	font-size:32rpx;
	line-height:64rpx;
	text-align: left;
}
.h2 {
	clear:both;
	border-width:1px 0;
	color:#666;
	text-align: center; 
	font-size:28rpx;
	line-height:64rpx;
	font-weight: bold;
}
.clearfix {
	margin:5px 15px;
	display:inline-block;
}
.praisePost {
	position: relative;
	text-align: left;
	margin-top: 30rpx;
	/* border-bottom:2rpx solid #ededed; */
	margin-bottom: 30rpx;
}
.img-like {
	width:50rpx;
	height:50rpx;
	display: inline-block;
	text-align: center;
	margin-right:20rpx;
	margin-top:8rpx;
}
.praise-button {
	font-size: 0.785714286rem;
	font-weight: normal;
	color:  #fff;
	background-color: #f85959;
	background-repeat: repeat-x;
	margin-top: 24rpx;
	width: 320rpx;
	height: 60rpx;
	border-radius: 60rpx;
}
.praise-button::after {
	border:none;
}
