
@import "../../wxParse/wxParse.wxss";
.content-article-detail {
	border-bottom: 1px solid #eee;
	margin-top: 40rpx;
	margin-bottom: 24px;
}
.entry-title {
	font-size: 48rpx;
	line-height: 1.6;
	font-weight: bold;
	outline: none;
	color: #3a4040;
	margin-bottom: 24rpx; 
}
.entry-summary {
	font-size: 32rpx;
	line-height: 64rpx;
	letter-spacing: 1px;
}
.entry-summary image {
	width: 100% !important;
}
.entry-date {
	font-size: 24rpx;
	line-height: 1.6;
	color: #959595;
	font-weight: normal;
	outline: none;
	margin-bottom: 30rpx;
	border-bottom:1px solid #eee;
}
.entry-date image {
	width: 24rpx;
	height: 24rpx;
}
.entry-date text {
	margin: 0 32rpx 0 10rpx;
}
.goHome {
	width: 48rpx !important;
	height: 48rpx !important;
	margin: 10rpx 20rpx 0 20rpx;
}
.comment-fixed {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: #fff;
	box-shadow: 0 0 6px rgba(30, 20, 20, 0.1);
	z-index: 100;
}
.comment-box {
	padding: 16rpx 4rpx;
	display: flex;
	justify-content: center;
}
.comment-button {
	font-size: 13px;
	color: #959595;
	margin: 0;
}
.comment-input {
	background-color: #f5f5f5;
	border-radius:4px;
	padding: 2px 3px 2px 10px;
	margin-right: 8px;
	font-size: 14px;
	width: 66.6%;
	height: 25px;
	max-height: 25px;
	min-height: 30px;
}
